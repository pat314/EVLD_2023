<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20"
            fx:controller="com.example.final_dictionary.SavedWordNoteController">
    <children>
        <Button fx:id="saveButton" layoutX="517.0" layoutY="360.0" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="69.0" styleClass="savebutton" stylesheets="@Style.css" text="Save"/>
        <TextArea fx:id="noteArea" layoutY="50.0" prefHeight="300.0" prefWidth="600.0">
            <font>
                <Font name="Segoe UI Light" size="14.0"/>
            </font>
        </TextArea>
        <Rectangle arcHeight="5.0" arcWidth="5.0" height="50.0" stroke="TRANSPARENT" strokeType="INSIDE" width="600.0">
            <fill>
                <LinearGradient endX="1.0" startY="1.0">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.9960784316062927" green="0.7450980544090271" blue="0.10980392247438431"/>
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="1.0" green="0.9176470637321472" blue="0.34117648005485535"/>
                            </color>
                        </Stop>
                    </stops>
                </LinearGradient>
            </fill>
            <effect>
                <DropShadow/>
            </effect>
        </Rectangle>
        <Label layoutX="235.0" layoutY="10.0" text="Note Editor">
            <font>
                <Font name="Segoe UI Bold" size="24.0"/>
            </font>
        </Label>
        <Button fx:id="discardButton" layoutX="431.0" layoutY="360.0" mnemonicParsing="false" styleClass="discardbutton"
                stylesheets="@Style.css" text="Discard"/>
    </children>
</AnchorPane>
